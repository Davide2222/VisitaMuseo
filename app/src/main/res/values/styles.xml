    <style name="VisitaMuseo.NuovoItinerario.MaterialButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@color/peach</item>
        <item name="cornerRadius">25dp</item>
        <item name="rippleColor">@color/darkNavy</item>
    </style>

    <!--  Stile del TextInputLayout per RicercaAppBar  -->
    <style name="VisitaMuseo.RicercaAppBar.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout_stroke</item>

        <item name="endIconMode">clear_text</item>
    </style>

    <!--  Stile del TextInputEditText per RicercaAppBar  -->
    <style name="VisitaMuseo.RicercaAppBar.TextInputLayout.EditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColorHint">@color/tema_scuro_testi</item>
        <item name="android:textColor">@color/tema_scuro_testi</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    <!--  Stile del TextInputLayout per InviaMessaggio  -->
    <style name="VisitaMuseo.InviaMessaggio.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxBackgroundColor">@color/tema_scuro_grigio_chiaro</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <!--  Stile del TextInputEditText per InviaMessaggio  -->
    <style name="VisitaMuseo.InviaMessaggio.TextInputLayout.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tema_scuro_testi</item>
    </style>

    <!-- FullScreen Theme -->
    <style name="Theme.MaterialComponents.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>



    <!-- Rating Bar -->
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/duskYellow</item>
        <item name="android:progressBackgroundTint">@color/grayBlue</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
    </style>

    <!-- Tag TextAppearance -->
    <style name="TagTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Counter TextAppearance -->
    <style name="CounterTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Transition Dialog Fragment -->
    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- Date Picker Theme -->
    <style name="date_picker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkNavy</item>
        <item name="colorControlActivated">@color/peach</item>
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


</resources>